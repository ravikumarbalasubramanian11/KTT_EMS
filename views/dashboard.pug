doctype html
head
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ' crossorigin='anonymous')
  link(rel='stylesheet' href='dashboard.css')
  script(src='https://code.jquery.com/jquery-3.6.0.min.js')
include topbar 
.container-fluid#abc
  .row
    #bar.col-2.p-0.bg-warning(style={height:'91vh'})
      include sidebar
    #content-1.col-10(style={'height':'91vh','overflow-y':'auto'})
      .container-fluid
        .row        
          .col-12.rounded-5.h-100.my-2.py-4
            .container
              .row
                .container.position-relative
                  // Rest of the container content
                h1 Welcome Back #{userName} !
                br
                .col-8.content
                  h3 Dashboard
                  br
                .col-12
                  .container
                    .row
                      .col-6.col-md-2.bg-success.rounded
                        h3.p-2.text-light.text-center No of Employee
                        .text-center.m-auto.pb-4
                          h1.m-auto.no_of_count.text-light.text_center 0
                .col-12
                  br
                  .container 
                    .row 
                      .col-8
                        if(sessionAdmin)
                          h3 List of Employee 
                      //.col-3
                        div
                          form(method='get' action='/login/aspx/findAll')
                            button.btn.btn-primary(type='submit') Get All Employee
                      //.col-2
                        div
                          button.btn.btn-success(onclick='newemployee()' type='submitted') New Employee
                      //Button trigger modal
                      .col-6.col-xl-2   
                        include modal-edit
                      .col-6.col-xl-2    
                        include modal-create
                  br
                .col-12
                  if(sessionAdmin)
                    include table
                .col-12#pagination
                .col-12
                  #content
