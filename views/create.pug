doctype html
head
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-KK94CHFLLe+nY2dmCWGMq91rCGa5gtU4mk92HdvYe+M/SXH301p5ILy+dN9+nJOZ' crossorigin='anonymous')
  link(rel='stylesheet' href='createaccount.css')
include topbar
#abc.container-fluid
  .row
    .col-2.p-0.bg-warning(style={height:'100vh'})
      include sidebar
    //
      <div class="col-2  contain-catlogue">
      <div class="rounded-5 m-1  bg-success">
      <p class="text-center py-1 text-light">Name</p>
      </div>
      </div>
    .col-10(style={'height':'100vh','overflow-y':'auto'})
      .container-fluid
        .row
          .col-12.h-100.py-2
            .container-fluid
              .row.shadow.rounded-5.p-5.m-5
                h1 New Employee
                .col-12
                  form.py-5(action='/login' method='post')
                    .container-fluid
                      .row
                        // Email input
                        .col-12.col-xl-4.form-outline.mb-4
                          input#form1Example13.form-control.form-control-xl(type='email' name='email')
                          label.form-label(for='form1Example13') Email address
                        .col-12.col-xl-4.form-outline.mb-4
                          input#form1Example13.form-control.form-control-xl(type='text' name='userName')
                          label.form-label(for='form1Example13') User Name
                        // Password input
                        .col-12.col-xl-4.form-outline.mb-4
                          input#form1Example23.form-control.w-10.form-control-xl(type='password' name='password')
                          label.form-label(for='form1Example23') Password
                        .col-12.col-xl-4.form-outline.mb-4
                          input#form1Example13.form-control.form-control-xl(type='text' name='fullName')
                          label.form-label(for='form1Example13') Full Name
                        .col-12.col-xl-4.form-outline.mb-4
                          input#form1Example13.form-control.form-control-xl(type='text' name='lastName')
                          label.form-label(for='form1Example13') Last Name
                        .col-12.col-xl-4.form-outline.mb-4
                          input#form1Example13.form-control.form-control-xl(type='text' name='age')
                          label.form-label(for='form1Example13') Age
                        .col-12.col-xl-4.form-outline.mb-4
                          input#form1Example13.form-control.form-control-xl(type='text' name='bloodGroup')
                          label.form-label(for='form1Example13') Blood Group
                        .col-12.col-xl-4.form-outline.mb-4
                          input#form1Example13.form-control.form-control-xl(type='number' name='contactNumber')
                          label.form-label(for='form1Example13') Contact Number
                        .col-12.col-xl-4.form-outline.mb-4
                          input#form1Example13.form-control.form-control-xl(type='date' name='dateOfJoining')
                          label.form-label(for='form1Example13') Date of Joining
                        .col-12.col-xl-4.form-outline.mb-4
                          input#form1Example13.form-control.form-control-xl(type='text' name='address')
                          label.form-label(for='form1Example13') Address
                        .col-12.col-xl-4.form-outline.mb-4
                          input#form1Example13.form-control.form-control-xl(type='text' name='department')
                          label.form-label(for='form1Example13') Department
                        .col-12.col-xl-4.form-outline.mb-4
                          input#form1Example13.form-control.form-control-xl(type='text' name='pastExperiance')
                          label.form-label(for='form1Example13') Past Experiance
                        // Submit button
                        .col-12.col-xl-4
                          button.btn.btn-primary.btn-lg.btn-block.w-50(type='submitted') Log In
script(src='createaccount.js')
script(src='side.js')
